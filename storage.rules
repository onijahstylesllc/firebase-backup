
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Only allow authenticated users to access their own files.
    // The path segments must match the user's UID.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
        // Allow write if the user is authenticated and the path matches their UID
        allow write: if request.auth != null && request.auth.uid == userId;
        // Allow anyone to read profile pictures
        allow read: if true;
    }
    
    // Rules for images within documents
    match /document-images/{userId}/{documentId}/{allPaths=**} {
      // Allow write if the user is authenticated and the path matches their UID
      allow write: if request.auth != null && request.auth.uid == userId;
      // Reading these images should be handled by the app logic
      // (e.g. only if they have access to the document). 
      // For simplicity in this version, we will allow reads if authenticated.
      // A production app might have more complex rules involving document access lists.
      allow read: if request.auth != null;
    }
  }
}
